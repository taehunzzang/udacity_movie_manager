<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.example.taehun.myapps"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MoviesVolley"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MovieMain"
            android:label="@string/title_activity_movie_main"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".MovieDetail"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName=".MovieMain">
            <meta-data
                android:name="android.suport.PARENT_ACTIVITY"
                android:value="com.example.taehun.myapps.MainActivity"/>
        </activity>
    </application>

</manifest>
